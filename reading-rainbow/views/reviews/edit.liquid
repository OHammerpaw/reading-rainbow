{% layout 'layout.liquid' %}
{% block content %}

    <div class="container-sm">
        <form action="/reviews/{{book.id}}/{{theReview.id}}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit review</legend>
                <label class="form-label">Review: </label>
                <input
                    class="form-control"
                    type="text"
                    name="review"
                    placeholder="enter review"
                    value="{{ theReview.review }}"
                >
            </fieldset>
            <input
                class="btn btn-success"
                type="submit"
                value="Edit Review"
            >
        </form>
    </div>

{% endblock %}