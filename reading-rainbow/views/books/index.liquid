{% layout 'layout.liquid'%}
{% block content %}
  <div>
    <h2 class="display-6">All Books</h2>
    <div class="row">
      {% for book in books %}
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src= {{ book.img }} alt="image of book cover">
          <h5 class="card-header">{{ book.title }}
          </h5>
          <h4>{{ book.subtitle }}
          </h4>
          <h3 class="card-title">
              {{ book.authors }}
            </h3>
          <div class="card-body">
            <img class="img-fluid" src= {{ book.img }} >
            <a href="/books/{{ book.id }}" class="btn btn-info">
              View
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}}