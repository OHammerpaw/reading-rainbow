{% layout 'layout.liquid'%}
{% block content %}
  <div>
    <h2 class="display-6">All Books</h2>
    <div class="row">
      {% for book in books %}
        <div class="card" style="width: 18rem;">
          <h5 class="card-header">{{ book.volumeInfo.title }}
          </h5>
          <h4>{{ book.volumeInfo.subtitle }}
          </h4>
          <div class="card-body">
            <h3 class="card-title">
              Author:
              {{ book.volumeInfo.authors }}
            </h3>
            <p class="card-text">
              {{ book.volumeInfo.description }}
            </p>
            <p class="card-text">
              Pages:
              {{ book.volumeInfo.pageCount }}
            </p>
            <a href="/books/{{ book.id }}" class="btn btn-info">
              View
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}}